{
    "id": "Ansible + Kubernetes + OpenTofu",
    "version": "1.0.0",
    "name": "Python 3",
    "description": "Develop applications using Ansible, Kubernetes and OpenTofu",
    "documentationURL": "https://github.com/jhoareaumarion/devcontainers/blob/main/src/ansible-kubernetes-tofu/README.md",
    "publisher": "jhoareaumarion",
    "licenseURL": "https://github.com/jhoareaumarion/devcontainers/blob/main/LICENSE",
    "options": {
        "imageVariant": {
            "type": "string",
            "description": "Python version (use -bookworm, or -bullseye variants on local arm64/Apple Silicon):",
            "proposals": [
                "3-bookworm",
                "3.12-bookworm",
                "3.11-bookworm",
                "3.10-bookworm",
                "3.9-bookworm",
                "3-bullseye",
                "3.12-bullseye",
                "3.11-bullseye",
                "3.10-bullseye",
                "3.9-bullseye"
            ],
            "default": "3.12-bullseye"
        }
    },
    "platforms": ["Python"],
    "optionalPaths": [
        ".github/*"
    ]
}